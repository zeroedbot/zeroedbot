        await okk.edit(
            get_string("upd_5"),
            file="Zeroed_updates.txt",
            buttons=Button.inline("Update Now", data="updatenow"),
        )
        remove(f"Zeroed_updates.txt")
        return
    else:
        await okk.edit(
            changelog_str,
            buttons=Button.inline("Update Now", data="updatenow"),
            parse_mode="html",
        )
